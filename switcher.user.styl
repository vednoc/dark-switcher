/* ==UserStyle==
@name         Dark-Switcher
@version      0.9.0
@author       vednoc <vednoc@pm.me> (https://gitlab.com/vednoc)
@description  Global settings companion-userstyle for my userstyles.
@namespace    gitlab.com/vednoc/dark-switcher
@homepageURL  https://gitlab.com/vednoc/dark-switcher
@updateURL    https://gitlab.com/vednoc/dark-switcher/raw/master/switcher.user.styl
@preprocessor stylus

@var checkbox overwrite 'Use `!important` to overwrite colors' 1
@var select primary 'Primary colors' {
    'Gruvbox Dark Medium': 'gruvbox-dark-medium',
    'Gruvbox Light Medium': 'gruvbox-light-medium',
    'Custom colors*': 'custom',
}
@var color bg 'Custom: Primary bg color  ' #212121
@var color hl 'Custom: Highlight bg color' #262626
@var color bd 'Custom: Secondary bg color' #2f2f2f
@var color fg 'Custom: Primary fg color  ' #e6e6e6
@var color cm 'Custom: Secondary fg color' #b6b6b6
@var color ac 'Custom: Accent color      ' #ff3f0f
@var color ac 'Custom: Accent color      ' #0f8f7f
@var color sh 'Custom: Shadow color      ' #00000025
==/UserStyle== */

@-moz-document regexp('(https?|file|(moz|chrome)-extension)://.*') {
    :root {
        // Whether to use `!important` or not.
        if ( overwrite == 1 ) { i = !important }

        if ( primary == 'gruvbox-dark-medium' ) {
            --bg: #282828   i
            --hl: #32302f   i
            --bd: #3c3836   i
            --fg: #fbf1c7   i
            --cm: #d5c4a1   i
            --ac: #d65d0e   i
            --sh: #00000018 i
        } else if ( primary == 'gruvbox-light-medium' ) {
            --bg: #fbf1c7   i
            --hl: #ebdbb2   i
            --bd: #d5c4a1   i
            --fg: #3c3836   i
            --cm: #665c54   i
            --ac: #d65d0e   i
            --sh: #00000006 i
        } else {
            --bg: bg i
            --hl: hl i
            --bd: bd i
            --fg: fg i
            --cm: cm i
            --ac: ac i
            --sh: sh i
        }

        // Shim for old variables.
        --dark   : var(--bg) i
        --darken : var(--hl) i
        --darker : var(--bd) i
        --light  : var(--fg) i
        --lighter: var(--cm) i
        --accent : var(--ac) i
        --shadow : var(--sh) i
    }
}

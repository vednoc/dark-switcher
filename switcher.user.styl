            --violet : #6c71c4 i
            --green  : #859900 i
            --blue   : #268bd2 i
            --cyan   : #2aa198 i
        } else if ( secondary == 'dracula' ) {
            --red    : #ff5555 i
            --orange : #ffb86c i
            --yellow : #f1fa8c i
            --magenta: #ff79c6 i
            --violet : #bd93f9 i

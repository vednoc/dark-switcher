/* ==UserStyle==
@name         Dark-Switcher
@version      0.9.0
@author       vednoc <vednoc@pm.me> (https://gitlab.com/vednoc)
@description  Global settings companion-userstyle for my userstyles.
@namespace    gitlab.com/vednoc/dark-switcher
@homepageURL  https://gitlab.com/vednoc/dark-switcher
@updateURL    https://gitlab.com/vednoc/dark-switcher/raw/master/switcher.user.styl
@preprocessor stylus

@var select primary 'Primary colors' {
    'Gruvbox Dark Medium': 'gruvbox-dark-medium',
    'Gruvbox Light Medium': 'gruvbox-light-medium',
}
==/UserStyle== */

@-moz-document regexp('(https?|file|(moz|chrome)-extension)://.*') {
    :root {
        if ( primary == 'gruvbox-dark-medium' ) {
            --bg: #282828   i
            --hl: #32302f   i
            --bd: #3c3836   i
            --fg: #fbf1c7   i
            --cm: #d5c4a1   i
            --ac: #d65d0e   i
            --sh: #00000018 i
        } else if ( primary == 'gruvbox-light-medium' ) {
            --bg: #fbf1c7   i
            --hl: #ebdbb2   i
            --bd: #d5c4a1   i
            --fg: #3c3836   i
            --cm: #665c54   i
            --ac: #d65d0e   i
            --sh: #00000006 i
        }
    }
}
